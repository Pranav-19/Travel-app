<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCECFC"
    android:orientation="vertical"
    tools:context=".PlanTravel">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/planner_img" />

    <ImageView
        android:id="@+id/number_days"
        android:layout_width="395dp"
        android:layout_height="109dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:background="@drawable/planner_btn" />



    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:outlineAmbientShadowColor="#000000"
        android:id="@+id/seekbar"
        android:outlineSpotShadowColor="#000000"
        android:progressTint="#36970f"
        android:thumbTint="#36970f"
        android:thumbTintMode="add" />
<TextView
    android:id="@+id/seekbar_text"
    android:layout_width="60dp"
    android:text="days"
    android:layout_height="20dp"
    android:layout_marginLeft="340dp"
    android:layout_marginTop="10dp"
    />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="395dp"
        android:layout_height="109dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_days"
        app:layout_constraintVertical_bias="0.116"
        app:srcCompat="@drawable/planner_date" />

    <TextView
        android:id="@+id/stDate"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="-97dp"
        android:text="dd/mm/yyyy"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.148" />


    <TextView
        android:id="@+id/endDate"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="27dp"
        android:text="dd/mm/yyyy"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/stDate"
        app:layout_constraintVertical_bias="0.619" />

    <TextView
        android:id="@+id/dateDisplayer"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Trip will be of days "
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.355" />


    <TextView
        android:id="@+id/planner_date_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginTop="-140dp"
        android:layout_marginLeft="285dp"

        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/button02"
        android:layout_width="103dp"
        android:layout_height="58dp"
        android:text="Proceed"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toEndOf="@+id/dateDisplayer"
        app:layout_constraintTop_toBottomOf="@+id/planner_date_text1"
        app:layout_constraintVertical_bias="0.485" />


</LinearLayout>