<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCECFC"
    android:orientation="vertical"
    tools:context=".PlanTravel_2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/static_spinner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="Day 0"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_planner"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginLeft="53dp"
        android:orientation="vertical"
        android:layout_marginTop="-625dp">

    </LinearLayout>
<LinearLayout
    android:id="@+id/layout_planner_day"
    android:layout_width="100dp"
    android:layout_marginTop="-390dp"
    android:layout_height="400dp"

    android:orientation="vertical"
    android:layout_marginLeft="270dp">

</LinearLayout>




    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/add_btn_plan"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="150dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/days_remaining"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="days remaining"
        android:textStyle="bold"
        />



    <Spinner
        android:id="@+id/static_spinner2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="50dp"
        android:id="@+id/last_day"
        android:layout_height="30dp"
        android:text="Day L"

        android:textStyle="bold"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-50dp"
        android:textSize="16sp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/planner_btn_design"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:text="Proceed"
        android:id="@+id/itenary"
        android:textStyle="bold"
        android:textSize="14sp"
        />




</LinearLayout>